{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@stores/*": ["stores/*"],
      "@styles/*": ["styles/*"],
      "@type/*": ["types/*"],
      "@env": ["src/types/env.d.ts"]
    }
  },
  "include": ["src"]
}

